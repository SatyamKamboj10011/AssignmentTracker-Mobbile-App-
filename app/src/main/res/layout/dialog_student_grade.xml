<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#FFFFFF">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸŽ“"
                android:textSize="24sp"
                android:gravity="center"
                android:background="@drawable/icon_circle_bg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Grade"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B" />

                <TextView
                    android:id="@+id/tvGradeStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: submitted"
                    android:textSize="12sp"
                    android:textColor="#64748B"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E8F0"
            android:layout_marginBottom="16dp" />

        <!-- Grade + Marks Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Grade -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grade"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#64748B" />

                <TextView
                    android:id="@+id/tvGradeGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A+"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#16A34A"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Marks -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marks"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#64748B" />

                <TextView
                    android:id="@+id/tvGradeMarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="92 / 100"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Stars -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#64748B" />

            <TextView
                android:id="@+id/tvGradeStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜…â˜…â˜…â˜…â˜…"
                android:textSize="18sp"
                android:textColor="#F59E0B"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Feedback box -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher Feedback"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#64748B"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvGradeFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your detailed feedback will appear here."
            android:textSize="14sp"
            android:textColor="#475569"
            android:background="#F8FAFC"
            android:padding="12dp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</ScrollView>
