<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Decorative Background Elements -->
        <View
            android:id="@+id/top_wave"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:background="#667EEA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/accent_square"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#764BA2"
            android:alpha="0.4"
            android:rotation="25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="-30dp" />

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingTop="48dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:background="#FFFFFF"
                android:alpha="0.8"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.01"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create your account to get started"
                android:textSize="15sp"
                android:textColor="#E0E7FF" />

        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:id="@+id/content_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="195dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Profile Photo Card with Asymmetric Design -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginEnd="20dp">

                        <!-- Rotated background square -->
                        <View
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="#667EEA"
                            android:alpha="0.15"
                            android:rotation="12" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="6dp"
                            app:cardBackgroundColor="#F8F9FA">

                            <ImageView
                                android:id="@+id/iv_profile_preview"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@android:drawable/ic_menu_myplaces"
                                android:tint="#667EEA"
                                android:padding="20dp"
                                android:contentDescription="Profile preview"
                                android:scaleType="centerCrop" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="bottom|end"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#667EEA">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="+"
                                android:textSize="18sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile Photo"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="#1A202C"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload your picture"
                            android:textSize="13sp"
                            android:textColor="#64748B"
                            android:layout_marginBottom="12dp" />

                        <Button
                            android:id="@+id/btnPickPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:text="Choose"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:backgroundTint="#667EEA"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="20dp"
                            app:cornerRadius="10dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Form Cards in Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Personal Info Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="32dp"
                                android:background="#667EEA"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="01"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#667EEA"
                                    android:letterSpacing="0.1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Personal Details"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A202C" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Full Name -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:hint="Full Name *"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeColor="#667EEA"
                            app:boxStrokeWidth="2dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_r_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A202C"
                                android:padding="14dp"
                                android:inputType="textPersonName" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Email -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:hint="Email Address *"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeColor="#667EEA"
                            app:boxStrokeWidth="2dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_r_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A202C"
                                android:padding="14dp"
                                android:inputType="textEmailAddress" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Password -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:hint="Password *"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeColor="#667EEA"
                            app:boxStrokeWidth="2dp"
                            app:endIconMode="password_toggle"
                            app:endIconTint="#667EEA">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_r_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A202C"
                                android:padding="14dp"
                                android:inputType="textPassword" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Confirm Password -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Confirm Password *"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeColor="#667EEA"
                            app:boxStrokeWidth="2dp"
                            app:endIconMode="password_toggle"
                            app:endIconTint="#667EEA">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_r_confirm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A202C"
                                android:padding="14dp"
                                android:inputType="textPassword" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Academic Info Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="32dp"
                                android:background="#0EA5E9"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="02"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#0EA5E9"
                                    android:letterSpacing="0.1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Academic Information"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A202C" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Two Column Layout for Student ID and Department -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="14dp">

                            <!-- Student ID -->
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="Student ID *"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="#667EEA"
                                app:boxStrokeWidth="2dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_r_roll"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A202C"
                                    android:padding="14dp"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Department -->
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:hint="Department *"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="#667EEA"
                                app:boxStrokeWidth="2dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_r_dept"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="#1A202C"
                                    android:padding="14dp"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Course -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Course (Optional)"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeColor="#667EEA"
                            app:boxStrokeWidth="2dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_r_course"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#1A202C"
                                android:padding="14dp"
                                android:inputType="text" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Info Alert -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FEF3C7"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="All fields marked with * are required to complete registration."
                        android:textSize="13sp"
                        android:textColor="#78350F"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

                <!-- Register Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#667EEA">

                    <Button
                        android:id="@+id/btn_Register"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:text="Create My Account â†’"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="@android:color/transparent"
                        android:textColor="#FFFFFF"
                        android:letterSpacing="0.03" />

                </androidx.cardview.widget.CardView>

                <!-- Footer -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EduTrack â€¢ Assignment Tracker v1.0"
                    android:textSize="12sp"
                    android:textColor="#94A3B8"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>