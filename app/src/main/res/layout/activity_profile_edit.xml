<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Photo"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:letterSpacing="0.01"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload or update your profile picture"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:layout_marginBottom="32dp"
            android:gravity="center" />

        <!-- Profile Photo Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center_horizontal">

                <!-- Profile Image Container -->
                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp">

                    <!-- Background Circle -->
                    <View
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_circle_bg" />

                    <!-- Profile Image -->
                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:contentDescription="Profile" />

                    <!-- Camera Badge -->
                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="-4dp"
                        android:layout_marginBottom="-4dp"
                        android:text="ðŸ“·"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@drawable/icon_circle_bg"
                        android:backgroundTint="#FFFFFF"
                        android:elevation="4dp" />

                </FrameLayout>

                <!-- Info Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap button below to choose photo"
                    android:textSize="13sp"
                    android:textColor="#64748B"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="16dp"
            android:layout_gravity="start" />

        <!-- Pick Photo Button Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ–¼ï¸"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg_cyan"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="4dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose Photo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select from gallery"
                        android:textSize="12sp"
                        android:textColor="#64748B"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_pick_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Select"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:backgroundTint="#2563EB"
                    android:textColor="#FFFFFF"
                    android:paddingHorizontal="20dp"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Save Button Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ’¾"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg_green"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="4dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Photo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update your profile picture"
                        android:textSize="12sp"
                        android:textColor="#64748B"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_save_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Save"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:backgroundTint="#10B981"
                    android:textColor="#FFFFFF"
                    android:paddingHorizontal="20dp"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Progress Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:indeterminateTint="#667EEA" />

                <TextView
                    android:id="@+id/tv_uploading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uploading photo..."
                    android:textSize="13sp"
                    android:textColor="#64748B"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Info Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E0F7FA"
            android:padding="14dp"
            android:layout_marginTop="24dp"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â„¹ï¸"
                android:textSize="18sp"
                android:layout_marginEnd="10dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo Guidelines"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#0C4A6E"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Use a clear, recent photo\nâ€¢ Face should be visible\nâ€¢ Recommended size: 500x500px"
                    android:textSize="12sp"
                    android:textColor="#0C4A6E"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
