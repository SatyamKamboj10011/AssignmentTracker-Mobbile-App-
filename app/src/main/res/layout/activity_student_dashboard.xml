<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fitsSystemWindows="true">

    <!-- Soft gradient background only at top -->
    <View
        android:id="@+id/header_bg"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@drawable/gradient_header_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SCROLLABLE CONTENT -->
    <ScrollView
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="32dp"
            android:paddingBottom="16dp">

            <!-- HEADER TEXT OVER GRADIENT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student Dashboard"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:letterSpacing="0.01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monitor your academic journey"
                        android:textSize="14sp"
                        android:textColor="#E0E7FF"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Notification icon (decorative) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:alpha="0.2">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_popup_reminder"
                        android:tint="#FFFFFF" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- PROFILE CARD (overlapping gradient and body) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <!-- Avatar -->
                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="16dp">

                        <View
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_circle_bg"
                            android:alpha="0.15" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <ImageView
                                android:id="@+id/iv_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_social_placeholder"
                                android:contentDescription="Profile photo" />
                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                    <!-- Name & Role -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_welcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome,"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1A202C" />

                        <TextView
                            android:id="@+id/tv_role"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Role: Student"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginTop="4dp" />

                        <!-- Status pill -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#D1FAE5">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="6dp">

                                <View
                                    android:layout_width="6dp"
                                    android:layout_height="6dp"
                                    android:background="@drawable/icon_circle_bg"
                                    android:backgroundTint="#10B981"
                                    android:layout_marginEnd="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Active"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:textColor="#059669" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION: YOUR PROGRESS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:background="#667EEA"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your Progress"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A202C" />
            </LinearLayout>

            <!-- STATS CARD: all 3 metrics in one responsive row -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="12dp"
                    android:weightSum="3">

                    <!-- TOTAL -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#64748B"
                            android:letterSpacing="0.08"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#0EA5E9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assignments"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#E5E7EB"
                        android:layout_marginVertical="4dp" />

                    <!-- PENDING -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PENDING"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#64748B"
                            android:letterSpacing="0.08"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_pending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#F59E0B" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tasks left"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#E5E7EB"
                        android:layout_marginVertical="4dp" />

                    <!-- COMPLETED -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COMPLETED"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#64748B"
                            android:letterSpacing="0.08"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_completed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#10B981" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Finished"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- NEXT DUE CARD (full width) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#667EEA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Due"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#C7D2FE"
                        android:letterSpacing="0.08"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_next_due"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay ahead by starting early."
                        android:textSize="12sp"
                        android:textColor="#E0E7FF"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- MY COURSES HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:background="#0EA5E9"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Courses"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A202C" />
            </LinearLayout>

            <!-- COURSES CONTAINER (you fill dynamically) -->
            <LinearLayout
                android:id="@+id/ll_courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp" />

            <!-- QUICK ACTIONS HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:background="#10B981"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quick Actions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A202C" />
            </LinearLayout>

            <!-- VIEW ASSIGNMENTS CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="14dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#DBEAFE">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="ðŸ“š"
                            android:textSize="24sp"
                            android:gravity="center" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Assignments"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1A202C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Browse all tasks and deadlines"
                            android:textSize="13sp"
                            android:textColor="#64748B"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_view_assignments"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:text="Open â†’"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="#0EA5E9"
                        android:textColor="#FFFFFF"
                        android:paddingHorizontal="18dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ANNOUNCEMENTS CARD (NEW) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="14dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FEF3C7">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="ðŸ””"
                            android:textSize="24sp"
                            android:gravity="center" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Announcements"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1A202C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See course updates and alerts"
                            android:textSize="13sp"
                            android:textColor="#64748B"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_announcements"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:text="View â†’"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="#F59E0B"
                        android:textColor="#FFFFFF"
                        android:paddingHorizontal="18dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- LOGOUT -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:strokeWidth="2dp"
                app:strokeColor="#FEE2E2"
                app:cardBackgroundColor="#FFFFFF">

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="ðŸšª  Sign Out"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="#DC2626"
                    android:backgroundTint="@android:color/transparent"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />
            </androidx.cardview.widget.CardView>

            <!-- FOOTER -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EduTrack â€¢ Assignment Tracker v1.0"
                android:textSize="12sp"
                android:textColor="#94A3B8"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
