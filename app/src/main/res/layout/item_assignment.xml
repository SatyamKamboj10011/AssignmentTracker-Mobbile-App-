<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Accent bar on the left -->
        <View
            android:id="@+id/accentBar"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#2563EB"
            android:alpha="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Header group: label, title, due chip -->
        <LinearLayout
            android:id="@+id/headerGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@id/accentBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Overline / category label -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:letterSpacing="0.08"
                android:textColor="#64748B" />

            <!-- Title row with icon + title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <!-- Icon badge using same drawable -->
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ“"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:background="@drawable/icon_circle_bg"
                    android:layout_marginEnd="10dp" />

                <!-- Title (same id) -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Assignment Title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0F172A"
                    android:letterSpacing="0.01"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Due chip (same id), aligned under title -->
            <TextView
                android:id="@+id/tvDue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due: 01/01/2025"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="#B91C1C"
                android:background="#FEE2E2"
                android:letterSpacing="0.03" />
        </LinearLayout>

        <!-- Description block (same id), center of card -->
        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Short description goes here. Keep it concise so students can scan quickly."
            android:textSize="14sp"
            android:textColor="#475569"
            android:lineSpacingExtra="3dp"
            android:background="#F8FAFC"
            android:padding="12dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerGroup"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Soft divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E2E8F0"
            android:layout_marginTop="14dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDesc"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Action row with primary / secondary actions -->
        <LinearLayout
            android:id="@+id/actionRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Complete button (same id, primary) -->
            <Button
                android:id="@+id/btnMarkComplete"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="âœ… Complete"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#10B981"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <!-- Details button (same id, secondary) -->
            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="ðŸ“‹ Details"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#2563EB"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
