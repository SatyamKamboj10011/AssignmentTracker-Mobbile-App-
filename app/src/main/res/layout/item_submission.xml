<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Student Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp">

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/icon_circle_bg"
                    android:contentDescription="@null" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ‘¤"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:contentDescription="Student avatar" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STUDENT"
                    android:textSize="10sp"
                    android:textColor="#64748B"
                    android:letterSpacing="0.15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvStudentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student name"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:layout_marginTop="4dp"
                    android:contentDescription="Student name" />

            </LinearLayout>

        </LinearLayout>

        <!-- Submission File Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Ž SUBMISSION"
            android:textSize="10sp"
            android:textColor="#64748B"
            android:letterSpacing="0.15"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#F8FAFC"
            android:padding="14dp"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_bg_cyan"
                    android:contentDescription="@null" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_file"
                    android:tint="#0EA5E9"
                    android:contentDescription="Submission file icon" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSubmissionFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="file.pdf"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:ellipsize="middle"
                    android:maxLines="1"
                    android:contentDescription="Submitted file name" />

                <TextView
                    android:id="@+id/tvSubmittedAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="12sp"
                    android:textColor="#64748B"
                    android:layout_marginTop="4dp"
                    android:contentDescription="Submission date" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpen"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Open"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:layout_marginEnd="6dp"
                app:icon="@drawable/ic_cloud_upload"
                app:iconSize="18dp"
                app:cornerRadius="10dp"
                android:backgroundTint="#2196F3"
                style="@style/Widget.MaterialComponents.Button"
                android:contentDescription="Open submission" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownload"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Download"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:layout_marginHorizontal="6dp"
                app:icon="@drawable/ic_attach_file"
                app:iconSize="18dp"
                app:cornerRadius="10dp"
                app:strokeWidth="2dp"
                app:strokeColor="#2196F3"
                android:textColor="#2196F3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:contentDescription="Download submission" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGrade"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Grade"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:layout_marginStart="6dp"
                app:icon="@drawable/ic_check"
                app:iconSize="18dp"
                app:cornerRadius="10dp"
                android:backgroundTint="#9C27B0"
                style="@style/Widget.MaterialComponents.Button"
                android:contentDescription="Grade submission" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
