<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Header row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ‘¥"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/icon_circle_bg"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create group"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111827" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Give your group a clear, memorable name."
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GROUP NAME"
        android:textSize="11sp"
        android:textColor="#9CA3AF"
        android:textStyle="bold"
        android:letterSpacing="0.12"
        android:layout_marginBottom="6dp" />

    <!-- Input with outlined style -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="#4F46E5"
        app:boxStrokeWidth="2dp"
        app:hintEnabled="false"
        app:startIconDrawable="@android:drawable/ic_input_add"
        app:startIconTint="#4F46E5">

        <!-- âš ï¸ id kept exactly the same -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. Team Alpha"
            android:inputType="textCapWords"
            android:textSize="14sp"
            android:textColor="#111827"
            android:textColorHint="#9CA3AF"
            android:padding="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
