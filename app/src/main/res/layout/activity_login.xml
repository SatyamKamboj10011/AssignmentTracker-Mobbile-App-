<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5FB"
    tools:context=".Activities.LoginActivity">

    <!-- Subtle background layer -->
    <View
        android:id="@+id/grid_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#E5E7F5"
        android:alpha="0.35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Floating gradient orbs -->
    <View
        android:id="@+id/orb_1"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/purple_gradient_orb"
        android:alpha="0.18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-90dp"
        android:layout_marginEnd="-80dp" />

    <View
        android:id="@+id/orb_2"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/purple_gradient_orb"
        android:alpha="0.12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-70dp"
        android:layout_marginStart="-70dp" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="40dp">

            <!-- Logo + app name -->
            <LinearLayout
                android:id="@+id/logo_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Hexagon-ish logo -->
                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#667EEA"
                        android:rotation="30" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="E"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EduTrack"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:letterSpacing="0.08" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assignment Tracker"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Main login card - now almost full width -->
            <androidx.cardview.widget.CardView
                android:id="@+id/main_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/logo_section"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Colored header -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#667EEA"
                        android:padding="26dp">

                        <!-- Decorative corner -->
                        <View
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#764BA2"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="-16dp"
                            android:layout_marginEnd="-16dp"
                            android:rotation="45" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome back,"
                                android:textSize="16sp"
                                android:textColor="#E0E7FF"
                                android:alpha="0.95" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sign in to continue"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:letterSpacing="-0.02"
                                android:layout_marginTop="4dp" />

                            <View
                                android:layout_width="46dp"
                                android:layout_height="3dp"
                                android:background="#FFFFFF"
                                android:layout_marginTop="12dp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <!-- FORM CONTENT -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="22dp"
                        android:paddingBottom="24dp">

                        <!-- Email label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EMAIL ADDRESS"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#6366F1"
                            android:letterSpacing="0.15"
                            android:layout_marginBottom="8dp" />

                        <!-- Email input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_email"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            app:boxBackgroundMode="filled"
                            app:boxBackgroundColor="#F9FAFB"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="2dp"
                            app:boxStrokeColor="#6366F1"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_email"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:hint="name@example.com"
                                android:inputType="textEmailAddress"
                                android:imeOptions="actionNext"
                                android:textSize="15sp"
                                android:textColor="#111827"
                                android:textColorHint="#9CA3AF"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:autofillHints="emailAddress"
                                android:importantForAutofill="yes" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Password label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PASSWORD"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#6366F1"
                            android:letterSpacing="0.15"
                            android:layout_marginBottom="8dp" />

                        <!-- Password input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_password"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:boxBackgroundMode="filled"
                            app:boxBackgroundColor="#F9FAFB"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="2dp"
                            app:boxStrokeColor="#6366F1"
                            app:endIconMode="password_toggle"
                            app:endIconTint="#6B7280"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_password"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:hint="Enter your password"
                                android:inputType="textPassword"
                                android:imeOptions="actionDone"
                                android:textSize="15sp"
                                android:textColor="#111827"
                                android:textColorHint="#9CA3AF"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:autofillHints="password"
                                android:importantForAutofill="yes" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Remember / Forgot row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="22dp">

                            <CheckBox
                                android:id="@+id/cb_remember"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Remember me"
                                android:textSize="13sp"
                                android:textColor="#6B7280"
                                android:buttonTint="#6366F1"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tv_forgot_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Forgot password?"
                                android:textSize="13sp"
                                android:textColor="#6366F1"
                                android:textStyle="bold"
                                android:padding="6dp"
                                android:clickable="true"
                                android:focusable="true" />
                        </LinearLayout>

                        <!-- Login button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_login"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:text="Sign In"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#6366F1"
                            android:layout_marginBottom="20dp"
                            app:cornerRadius="14dp"
                            app:elevation="4dp" />

                        <!-- Divider -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="#E5E7EB" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="or continue with"
                                android:textSize="12sp"
                                android:textColor="#6B7280"
                                android:paddingHorizontal="12dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="#E5E7EB" />
                        </LinearLayout>

                        <!-- Social login row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="18dp">

                            <ImageButton
                                android:id="@+id/btn_google"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/social_button_bg"
                                android:src="@drawable/ic_google"
                                android:scaleType="centerInside"
                                android:padding="10dp"
                                android:contentDescription="Sign in with Google"
                                android:clickable="true"
                                android:focusable="true" />

                            <ImageButton
                                android:id="@+id/btn_facebook"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/social_button_bg"
                                android:src="@drawable/ic_facebook"
                                android:scaleType="centerInside"
                                android:padding="10dp"
                                android:contentDescription="Sign in with Facebook"
                                android:clickable="true"
                                android:focusable="true" />

                            <ImageButton
                                android:id="@+id/btn_instagram"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/social_button_bg"
                                android:src="@drawable/ic_instagram"
                                android:scaleType="centerInside"
                                android:padding="10dp"
                                android:contentDescription="Sign in with Instagram"
                                android:clickable="true"
                                android:focusable="true" />

                            <ImageButton
                                android:id="@+id/btn_gmail"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/social_button_bg"
                                android:src="@drawable/ic_gmail"
                                android:scaleType="centerInside"
                                android:padding="10dp"
                                android:contentDescription="Sign in with Gmail"
                                android:clickable="true"
                                android:focusable="true" />
                        </LinearLayout>

                        <!-- Sign up prompt -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingTop="8dp">

                            <TextView
                                android:id="@+id/tv_no_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Don't have an account? "
                                android:textSize="14sp"
                                android:textColor="#6B7280" />

                            <TextView
                                android:id="@+id/tv_register"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sign Up"
                                android:textSize="14sp"
                                android:textColor="#6366F1"
                                android:textStyle="bold"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="4dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Footer text under card -->
            <TextView
                android:id="@+id/tv_footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure Login â€¢ Privacy Protected"
                android:textSize="11sp"
                android:textColor="#9CA3AF"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/main_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
