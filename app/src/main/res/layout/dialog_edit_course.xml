<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Form Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="ðŸ“š"
                android:textSize="32sp"
                android:gravity="center"
                android:background="@drawable/icon_circle_bg"
                android:layout_marginEnd="14dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Details"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:letterSpacing="0.01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fill in the course information"
                    android:textSize="13sp"
                    android:textColor="#64748B"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Course Title Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Title *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F8FAFC"
            android:padding="4dp"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸ“–"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/icon_circle_bg"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/et_course_title"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Enter course title"
                android:textSize="15sp"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:inputType="text" />

        </LinearLayout>

        <!-- Course Code Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Code *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F8FAFC"
            android:padding="4dp"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸ”¢"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/icon_circle_bg"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/et_course_code"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="e.g. CS101, IA721001"
                android:textSize="15sp"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:inputType="text" />

        </LinearLayout>

        <!-- Description Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8FAFC"
            android:padding="12dp"
            android:layout_marginBottom="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ“"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/icon_circle_bg"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Description"
                    android:textSize="13sp"
                    android:textColor="#64748B"
                    android:textStyle="bold" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_course_desc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Enter course description..."
                android:textSize="14sp"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:maxLines="5" />

        </LinearLayout>

        <!-- Teacher Email Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher Assignment"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F8FAFC"
            android:padding="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸ‘¨â€ðŸ«"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/icon_circle_bg"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/et_teacher_email"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Teacher email address"
                android:textSize="15sp"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <!-- Info Note -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E0F7FA"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â„¹ï¸"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fields marked with * are required"
                android:textSize="12sp"
                android:textColor="#0C4A6E"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>