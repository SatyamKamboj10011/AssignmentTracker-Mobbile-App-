<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Header Section with Gradient Background -->
        <View
            android:id="@+id/header_bg"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="@drawable/gradient_header_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Decorative Circle -->
        <View
            android:id="@+id/circle_decoration"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="-20dp"
            android:layout_marginStart="-20dp" />

        <!-- Header Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/icon_card"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                android:tint="#9C27B0" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Header Text -->
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Grade Submission"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:letterSpacing="0.01"
            app:layout_constraintTop_toBottomOf="@id/icon_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Main Content Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/content_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tv_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Student Info Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤ STUDENT INFORMATION"
                    android:textSize="12sp"
                    android:textColor="#64748B"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E2E8F0"
                    app:cardBackgroundColor="#F8FAFC">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            android:tint="#9C27B0"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvStudentLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Student: "
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#1E293B" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Submitted File Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Ž SUBMITTED FILE"
                    android:textSize="12sp"
                    android:textColor="#64748B"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#2196F3"
                    app:cardBackgroundColor="#E3F2FD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_file"
                            android:tint="#2196F3"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvSubmissionFile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="file.pdf"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#1565C0" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenFile"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Open File"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:layout_marginBottom="24dp"
                    app:icon="@drawable/ic_cloud_upload"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    android:backgroundTint="#2196F3"
                    style="@style/Widget.MaterialComponents.Button" />

                <!-- Grading Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ GRADING"
                    android:textSize="12sp"
                    android:textColor="#64748B"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Marks and Grade in Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Marks Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_marks"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeColor="@color/inputStrokeColor"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@drawable/ic_title"
                        app:startIconTint="@color/iconTint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMarks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Marks (e.g. 18)"
                            android:inputType="number"
                            android:textSize="16sp"
                            android:padding="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Grade Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_grade"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeColor="@color/inputStrokeColor"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@drawable/ic_check"
                        app:startIconTint="@color/iconTint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etGrade"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Grade (e.g. A)"
                            android:inputType="text"
                            android:textSize="16sp"
                            android:padding="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Feedback Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_feedback"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeColor="@color/inputStrokeColor"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:startIconDrawable="@drawable/ic_description"
                    app:startIconTint="@color/iconTint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:hint="Feedback for student"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:textSize="16sp"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Rating Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­ RATING"
                    android:textSize="12sp"
                    android:textColor="#64748B"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E2E8F0"
                    app:cardBackgroundColor="#FFFBF0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:rating="0"
                            android:progressTint="#FFA726"
                            android:secondaryProgressTint="#FFE0B2"
                            android:progressBackgroundTint="#E0E0E0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate the submission quality"
                            android:textSize="12sp"
                            android:textColor="#F57C00"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>
                    <Button
                        android:id="@+id/btnSaveGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Grade"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Info Note -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#EFF6FF"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="start">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_info"
                            android:tint="#3B82F6"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tip: Provide constructive feedback to help the student improve their work."
                            android:textSize="12sp"
                            android:textColor="#3B82F6"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>