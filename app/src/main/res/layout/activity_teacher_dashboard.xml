                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_myplaces"
                            android:tint="#667EEA"
                            android:contentDescription="Teacher avatar" />

                    </FrameLayout>

                    <!-- Welcome Text -->
                    <LinearLayout
