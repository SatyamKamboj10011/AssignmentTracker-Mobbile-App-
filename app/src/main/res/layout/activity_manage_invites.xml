<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <!-- 1. Decorative Header Background (Used gradient_header_bg) -->
        <View
            android:id="@+id/header_bg"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:background="@drawable/gradient_header_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 2. Content Container (Starts lower for floating effect) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADMIN ACCESS CONTROL"
                    android:textSize="12sp"
                    android:textColor="#E0E7FF"
                    android:alpha="0.9"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Invite Code"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="-0.02" />

            </LinearLayout>

            <!-- 3. Main Input Card (Used MaterialCardView for better shadowing) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#EFF6FF">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="ðŸ”‘"
                                android:textSize="28sp"
                                android:gravity="center" />

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Code Generation Form"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#0F172A" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Define permissions and identifier"
                                android:textSize="14sp"
                                android:textColor="#64748B"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- A. Invite Code Section (Input) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CODE IDENTIFIER (E.g., for tracking)"
                            android:textSize="11sp"
                            android:textColor="#64748B"
                            android:textStyle="bold"
                            android:letterSpacing="0.12"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeColor="#6366F1"
                            app:boxCornerRadiusTopStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusBottomEnd="14dp"
                            app:hintEnabled="false">

                            <!-- ID preserved as requested -->
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_invite_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="e.g., TEAM-ALPHA-2025"
                                android:inputType="textCapCharacters"
                                android:textSize="16sp"
                                android:textColor="#0F172A"
                                android:textColorHint="#94A3B8"
                                android:textStyle="bold"
                                android:padding="16dp"
                                android:letterSpacing="0.05" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- B. Role Section (Spinner) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="28dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ASSIGN ROLE (Teacher or Admin)"
                            android:textSize="11sp"
                            android:textColor="#64748B"
                            android:textStyle="bold"
                            android:letterSpacing="0.12"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#C7D2FE"
                            app:cardBackgroundColor="#F5F3FF">

                            <!-- ID preserved as requested -->
                            <Spinner
                                android:id="@+id/spinner_role"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:paddingHorizontal="16dp" />

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- C. Create Button (CRASH FIX: Using MaterialButton with gradient background) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_create_invite"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="GENERATE UNIQUE CODE"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/btn_gradient"
                        app:backgroundTint="@null"
                        app:cornerRadius="14dp"
                        app:elevation="4dp"
                        android:layout_gravity="center_horizontal"
                        android:letterSpacing="0.02" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 4. Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FEF9E7"
                app:strokeWidth="1dp"
                app:strokeColor="#FCD34D">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡"
                        android:textSize="24sp"
                        android:layout_marginEnd="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Each invite code is unique and is stored in the database. After generation, ensure the code is logged and shared securely for one-time registration."
                        android:textSize="13sp"
                        android:textColor="#78350F"
                        android:lineSpacingExtra="3dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>