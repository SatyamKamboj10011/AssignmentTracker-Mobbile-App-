<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Course Icon -->
            <TextView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="ðŸ“š"
                android:textSize="28sp"
                android:gravity="center"
                android:background="@drawable/icon_circle_bg"
                android:layout_marginEnd="14dp" />

            <!-- Course Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCourseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course title"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:letterSpacing="0.01"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvCourseCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CODE101"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#667EEA"
                        android:background="#E0E7FF"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¨â€ðŸ«"
                        android:textSize="14sp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tvCourseTeacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="teachername"
                        android:textSize="13sp"
                        android:textColor="#64748B"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvCourseDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short description"
            android:textColor="#475569"
            android:textSize="14sp"
            android:lineSpacingExtra="3dp"
            android:background="#F8FAFC"
            android:padding="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="14dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E8F0"
            android:layout_marginBottom="14dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditCourse"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="âœï¸ Edit"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#2563EB"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btnDeleteCourse"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="ðŸ—‘ï¸ Delete"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#EF4444"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="20dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>