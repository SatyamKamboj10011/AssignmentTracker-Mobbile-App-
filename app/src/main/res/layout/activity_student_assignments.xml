<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:padding="20dp"
    android:fitsSystemWindows="true">

    <!-- HEADER CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title Section with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:text="ðŸ“‹"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:background="@drawable/icon_circle_bg"
                    android:layout_marginEnd="14dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Assignments"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:letterSpacing="0.01" />

                    <TextView
                        android:id="@+id/tvSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Track deadlines, work, and submissions"
                        android:textSize="13sp"
                        android:textColor="#64748B"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- SEARCH BOX with Enhanced Design -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F8FAFC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:tint="#94A3B8" />

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:background="@android:color/transparent"
                        android:hint="Search assignments..."
                        android:textColorHint="#94A3B8"
                        android:textColor="#1E293B"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:inputType="text" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- MAIN CONTENT -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerCard"
        android:layout_above="@+id/bottomPanel">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- EMPTY STATE with Better Design -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:padding="32dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F1F5F9">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:tint="#94A3B8" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No assignments yet.\nPull down to refresh."
                    android:textColor="#64748B"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your assignments will appear here"
                    android:textColor="#94A3B8"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <!-- LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAssignments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:clipToPadding="false"
                android:scrollbars="vertical" />

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- BOTTOM PANEL with Enhanced Design -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="4dp"
        android:elevation="8dp"
        android:background="@android:color/transparent">

        <!-- Refresh Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ”„"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg_cyan"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="2dp" />

                <Button
                    android:id="@+id/btnRefresh"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2563EB"
                    android:textColor="#FFFFFF"
                    android:text="Refresh"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    style="@style/Widget.MaterialComponents.Button"
                    app:cornerRadius="10dp"
                    android:layout_marginEnd="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- My Submissions Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ“"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/icon_bg_green"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="2dp" />

                <Button
                    android:id="@+id/btnMySubmissions"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="#10B981"
                    android:textColor="#FFFFFF"
                    android:text="Submissions"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    style="@style/Widget.MaterialComponents.Button"
                    app:cornerRadius="10dp"
                    android:layout_marginEnd="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>