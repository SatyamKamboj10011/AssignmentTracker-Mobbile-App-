<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Header Section with Icon -->
        <View
            android:id="@+id/header_bg"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="#3E1F6D"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Decorative element -->
        <View
            android:id="@+id/circle_decoration"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:alpha="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="-20dp"
            android:layout_marginStart="-20dp" />

        <!-- Header Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/icon_card"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_assignment_create"
                android:tint="#4CAF50" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Header Text -->
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Create Assignment"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:letterSpacing="0.01"
            app:layout_constraintTop_toBottomOf="@id/icon_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Main Content Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/content_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tv_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Title Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_title"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeColor="@color/inputStrokeColor"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:startIconDrawable="@drawable/ic_title"
                    app:startIconTint="@color/iconTint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Assignment Title"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Description Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_description"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeColor="@color/inputStrokeColor"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:startIconDrawable="@drawable/ic_description"
                    app:startIconTint="@color/iconTint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_description"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:hint="Description"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:textSize="16sp"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Due Date Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_due_date"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeColor="@color/inputStrokeColor"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:startIconDrawable="@drawable/ic_calender"
                    app:startIconTint="@color/iconTint"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_calender_select"
                    app:endIconTint="@color/accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_due_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Due Date (tap to select)"
                        android:focusable="false"
                        android:clickable="true"
                        android:textSize="16sp"
                        android:padding="16dp" />


                </com.google.android.material.textfield.TextInputLayout>

                <!-- File Attachment Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File Attachment"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp" />

                <!-- File Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pick_file"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Attach File"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        app:icon="@drawable/ic_attach_file"
                        app:iconGravity="textStart"
                        app:cornerRadius="12dp"
                        android:backgroundTint="#2196F3"
                        style="@style/Widget.MaterialComponents.Button" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_open_gofile"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:text="Open Host"
                        android:textAllCaps="false"

                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        app:icon="@drawable/ic_cloud_upload"
                        app:cornerRadius="12dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="#9E9E9E"
                        android:textColor="#5F6368"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                </LinearLayout>

                <!-- File Name Display -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E2E8F0"
                    app:cardBackgroundColor="#F8FAFC">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_file"
                            android:tint="#64748B" />

                        <TextView
                            android:id="@+id/tv_file_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No file selected"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Assign to All Checkbox -->
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/chk_assign_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assign to all students"
                    android:textSize="15sp"
                    android:textColor="#1E293B"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    app:buttonTint="@color/checkboxTint" />
                <Button
                    android:id="@+id/btn_pick_students"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Students" />

                <Button
                    android:id="@+id/btn_manage_groups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Groups"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/tv_picked_students"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(all students)"
                    android:paddingStart="8dp" />


                <!-- Info Note -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#EFF6FF"
                    app:strokeWidth="0dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="start">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_info"
                            android:tint="#3B82F6"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_note"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tip: For large files use GoFile (open host). Links are stored in Firestore."
                            android:textSize="12sp"
                            android:textColor="#3B82F6"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Create Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_create"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Create Assignment"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    app:icon="@drawable/ic_check"
                    app:iconGravity="textStart"
                    app:cornerRadius="14dp"
                    android:backgroundTint="#4CAF50"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>