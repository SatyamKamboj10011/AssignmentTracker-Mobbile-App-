<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9"
    tools:context=".Activities.ChatActivity"
    android:fitsSystemWindows="true">

    <!-- Top bar / title (optional) -->
    <LinearLayout
        android:id="@+id/chatToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivAssistantAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvAssistantTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment Assistant"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0F172A" />

            <TextView
                android:id="@+id/tvAssistantSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ask about due, overdue, or next work"
                android:textSize="12sp"
                android:textColor="#64748B" />
        </LinearLayout>

    </LinearLayout>

    <!-- Messages list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChatMessages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/chatToolbar"
        app:layout_constraintBottom_toTopOf="@+id/chatInputBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_chat_message_bot" />

    <!-- Input bar at bottom -->
    <LinearLayout
        android:id="@+id/chatInputBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Ask about your assignments..."
            android:paddingHorizontal="12dp"
            android:background="@android:color/transparent"
            android:textColor="#0F172A"
            android:textColorHint="#94A3B8"
            android:inputType="textCapSentences|textMultiLine"
            android:imeOptions="actionSend"
            android:maxLines="4" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/icon_circle_bg"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="Send"
            android:scaleType="centerInside"
            android:tint="#2563EB" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
