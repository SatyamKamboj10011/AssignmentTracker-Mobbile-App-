<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/submission_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Header Section with Gradient Background -->
        <View
            android:id="@+id/header_bg"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="@drawable/gradient_header_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Decorative Circle -->
        <View
            android:id="@+id/circle_decoration"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="-20dp" />

        <!-- Header Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/icon_card"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cloud_upload"
                android:tint="#FF9800" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Header Text -->
        <TextView
            android:id="@+id/tvSubmissionHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Submit Assignment"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:letterSpacing="0.01"
            app:layout_constraintTop_toBottomOf="@id/icon_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Main Content Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/content_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tvSubmissionHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Assignment Info Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“š ASSIGNMENT INFO"
                    android:textSize="12sp"
                    android:textColor="#64748B"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E2E8F0"
                    app:cardBackgroundColor="#F8FAFC">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvAssignmentTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Assignment title"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="#1E293B"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="#FEE2E2"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â°"
                                android:textSize="14sp"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:id="@+id/tvAssignmentDue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Due: --"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="#B91C1C" />

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Existing Submission Section -->
                <LinearLayout
                    android:id="@+id/existingSubmissionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ… PREVIOUS SUBMISSION"
                        android:textSize="12sp"
                        android:textColor="#64748B"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#10B981"
                        app:cardBackgroundColor="#F0FDF4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvExistingTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You submitted:"
                                android:textStyle="bold"
                                android:textColor="#166534"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="#DCFCE7"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_file"
                                    android:tint="#10B981"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/tvExistingFile"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="filename.pdf"
                                    android:textColor="#166534"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="12dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnViewExisting"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    android:text="View"
                                    android:textAllCaps="false"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="8dp"
                                    app:icon="@drawable/ic_info"
                                    app:cornerRadius="10dp"
                                    android:backgroundTint="#10B981"
                                    style="@style/Widget.MaterialComponents.Button" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnReplace"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    android:text="Replace"
                                    android:textAllCaps="false"
                                    android:textSize="14sp"
                                    android:layout_marginStart="8dp"
                                    app:icon="@drawable/ic_attach_file"
                                    app:cornerRadius="10dp"
                                    app:strokeWidth="2dp"
                                    app:strokeColor="#10B981"
                                    android:textColor="#10B981"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- File Attachment Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Ž ATTACHMENT"
                    android:textSize="12sp"
                    android:textColor="#64748B"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E2E8F0"
                    app:cardBackgroundColor="#F8FAFC">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_file"
                            android:tint="#64748B" />

                        <TextView
                            android:id="@+id/tvPickedName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No file chosen"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- File Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPick"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Choose File"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        app:icon="@drawable/ic_attach_file"
                        app:iconGravity="textStart"
                        app:cornerRadius="12dp"
                        android:backgroundTint="#2196F3"
                        style="@style/Widget.MaterialComponents.Button" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUpload"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Upload"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:enabled="false"
                        app:icon="@drawable/ic_cloud_upload"
                        app:iconGravity="textStart"
                        app:cornerRadius="12dp"
                        android:backgroundTint="#FF9800"
                        style="@style/Widget.MaterialComponents.Button" />
                </LinearLayout>

                <!-- Upload Message -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#EFF6FF"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="start">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_info"
                            android:tint="#3B82F6"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvUploadMsg"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select a file and click upload to submit your assignment."
                            android:textSize="12sp"
                            android:textColor="#3B82F6"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Close Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClose"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Close"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_check"
                    app:iconGravity="textStart"
                    app:cornerRadius="14dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="#9E9E9E"
                    android:textColor="#5F6368"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                <Button
                    android:id="@+id/btnViewGrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Grade and Feedback"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#667EEA"
                    android:textColor="#FFFFFF" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>