<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manage_users_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F7FAFF"
    android:fitsSystemWindows="true">

    <!-- Header: Manage Users -->
    <TextView
        android:id="@+id/tvManageHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Management Portal"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        android:layout_marginBottom="16dp"
        tools:text="User Management Portal" />

    <!-- Search Bar (Now using MaterialCardView for modern theming) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCard"
        android:layout_below="@id/tvManageHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#6B7280" /> <!-- Used app:tint for modern color application -->

            <EditText
                android:id="@+id/etUserSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:hint="Search by name or email..."
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="#374151"
                android:inputType="textEmailAddress" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- User List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsers"
        android:layout_below="@id/searchCard"
        android:layout_above="@+id/bottomButtons"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

    <!-- Bottom Action Buttons (Material Buttons for better look) -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Refresh Button (Secondary/Outlined look) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRefreshUsers"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:text="Refresh List"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="#2563EB"
            android:textColor="#2563EB"
            app:cornerRadius="10dp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <!-- Create User Button (Primary/Filled look) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNewUser"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:text="Add New User"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:backgroundTint="#10B981"
            android:textColor="#FFFFFF"
            app:cornerRadius="10dp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />
    </LinearLayout>

</RelativeLayout>