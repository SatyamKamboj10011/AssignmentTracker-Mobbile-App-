<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#0F9988"
                android:endColor="#0891B2"
                android:type="linear" />
            <corners android:radius="100dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#14B8A6"
                android:endColor="#06B6D4"
                android:type="linear" />
            <corners android:radius="100dp" />
        </shape>
    </item>
</selector>